<section class="py-20 bg-white">
  <div class="container mx-auto px-6 max-w-5xl">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
        Simple, Powerful, 
        <span class="bg-gradient-to-r from-orange-600 to-red-600 bg-clip-text text-transparent">Convenient</span>
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Easy-to-use volume controls for your Mac. Perfect for quick adjustments while listening to music.
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      <!-- System Volume Control -->
      <div class="text-center p-8 rounded-2xl border border-gray-100 hover:border-orange-200 hover:shadow-lg transition-all duration-300">
        <div class="w-16 h-16 bg-gradient-to-r from-orange-500 to-red-500 rounded-xl flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.114 5.636a9 9 0 010 12.728M16.463 8.288a5.25 5.25 0 010 7.424M6.75 8.25l4.72-4.72a.75.75 0 011.28.53v15.88a.75.75 0 01-1.28.53l-4.72-4.72H4.51c-.88 0-1.704-.507-1.938-1.354A9.01 9.01 0 012.25 12c0-.83.112-1.633.322-2.396C2.806 8.756 3.63 8.25 4.51 8.25H6.75z" />
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-gray-900 mb-4">System volume, instantly</h3>
        <p class="text-gray-600 leading-relaxed">
          Smooth, responsive slider in your menu bar.
        </p>
      </div>

      <!-- Apple Music Integration -->
      <div class="text-center p-8 rounded-2xl border border-gray-100 hover:border-orange-200 hover:shadow-lg transition-all duration-300">
        <div class="w-16 h-16 bg-gradient-to-r from-orange-500 to-red-500 rounded-xl flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="m9 9 10.5-3m0 6.553v3.75a2.25 2.25 0 0 1-1.632 2.163l-1.32.377a1.803 1.803 0 1 1-.99-3.467l2.31-.66a2.25 2.25 0 0 0 1.632-2.163Zm0 0V2.25L9 5.25v10.303m0 0v3.75a2.25 2.25 0 0 1-1.632 2.163l-1.32.377a1.803 1.803 0 0 1-.99-3.467l2.31-.66A2.25 2.25 0 0 0 9 15.553Z" />
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-gray-900 mb-4">Apple Music volume, separate</h3>
        <p class="text-gray-600 leading-relaxed">
          Adjust independently from Mac volume.
        </p>
      </div>

      <!-- Launch at Login -->
      <div class="text-center p-8 rounded-2xl border border-gray-100 hover:border-orange-200 hover:shadow-lg transition-all duration-300">
        <div class="w-16 h-16 bg-gradient-to-r from-orange-500 to-red-500 rounded-xl flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-gray-900 mb-4">Launch at login</h3>
        <p class="text-gray-600 leading-relaxed">
          Set it and forget it.
        </p>
      </div>
    </div>

  </div>
</section>