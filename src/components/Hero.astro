<section class="min-h-screen flex items-center justify-center bg-gradient-to-br from-purple-50 to-indigo-100">
  <div class="container mx-auto px-6 py-20 max-w-5xl">
    <div class="grid lg:grid-cols-5 gap-12 items-center">
      
      <!-- App Icon Side -->
      <div class="flex justify-center lg:justify-end order-1 lg:order-1 lg:col-span-2">
        <div class="relative">
          <img 
            src={import.meta.env.BASE_URL + 'AppIcon.png'} 
            alt="MIDI Volume Control App Icon" 
            class="w-56 h-56 md:w-72 md:h-72 lg:w-full lg:max-w-80 lg:h-auto lg:aspect-square"
            style="filter: drop-shadow(0 25px 25px rgb(0 0 0 / 0.15)) drop-shadow(0 10px 10px rgb(0 0 0 / 0.04));"
          />
          <!-- Subtle glow effect -->
          <div class="absolute inset-0 bg-purple-400 opacity-20 blur-3xl rounded-full -z-10"></div>
        </div>
      </div>

      <!-- Content Side -->
      <div class="text-center lg:text-left space-y-8 order-2 lg:order-2 lg:col-span-3">
        <div class="space-y-4">
          <div class="text-sm font-semibold text-purple-600 uppercase tracking-wide mb-2">
            Mac App
          </div>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 leading-none">
            MIDI Volume
            <span class="bg-gradient-to-r from-purple-600 to-indigo-600 bg-clip-text text-transparent">
              Control
            </span>
          </h1>
          
          <p class="text-xl md:text-2xl text-gray-600 max-w-2xl mx-auto lg:mx-0">
            Control your Mac's system and music volume <strong>independently</strong> with any MIDI controller - and a handy menu bar icon
          </p>
        </div>

        <!-- CTA Section -->
        <div class="space-y-6">
          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
            <a
              href="https://apps.apple.com/us/app/midi-volume-control/id6752268711?mt=12"
              class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white bg-gradient-to-r from-purple-600 to-indigo-600 rounded-xl shadow-lg transition-all duration-200 hover:shadow-xl hover:brightness-110 min-w-fit whitespace-nowrap"
            >
              <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75V16.5M16.5 12 12 16.5m0 0L7.5 12m4.5 4.5V3" />
              </svg>
              Download from App Store
            </a>
          </div>
          
          <div class="text-sm text-gray-500">
            <p class="flex items-center justify-center lg:justify-start">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 17.25v1.007a3 3 0 0 1-.879 2.122L7.5 21h9l-.621-.621A3 3 0 0 1 15 18.257V17.25m6-12V15a2.25 2.25 0 0 1-2.25 2.25H5.25A2.25 2.25 0 0 1 3 15V5.25m18 0A2.25 2.25 0 0 0 18.75 3H5.25A2.25 2.25 0 0 0 3 5.25m18 0V12a2.25 2.25 0 0 1-2.25 2.25H5.25A2.25 2.25 0 0 1 3 12V5.25" />
              </svg>
              Requires macOS 10.15 or later
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>