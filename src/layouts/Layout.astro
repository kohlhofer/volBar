---
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { title, description = "Control Mac and Music volumes separately and independently from your menu bar. Two sliders for complete control.", ogImage = "og-image.png" } = Astro.props;

const siteUrl = import.meta.env.PROD ? 'https://kohlhofer.com/volBar' : 'http://localhost:4321';
const fullOgImageUrl = siteUrl + '/' + ogImage;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
  <meta charset="UTF-8" />
  <meta name="description" content={description} />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="generator" content={Astro.generator} />
  
  <!-- SEO Meta Tags -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={fullOgImageUrl} />
  <meta property="og:image:alt" content="Menu Volume App Icon" />
  <meta property="og:type" content="website" />
  <meta property="og:url" content={siteUrl + Astro.url.pathname} />
  <meta property="og:site_name" content="Menu Volume" />

  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={fullOgImageUrl} />
  <meta name="twitter:image:alt" content="Menu Volume App Icon" />
  
  <!-- Schema.org markup for app -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "SoftwareApplication",
      "name": "Menu Volume",
      "operatingSystem": "macOS",
      "applicationCategory": "UtilitiesApplication",
      "description": "Control Mac and Music volumes separately and independently from your menu bar. Two sliders for complete control.",
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD"
      },
      "downloadUrl": "https://apps.apple.com/us/app/menu-volume/id6752268711?mt=12",
      "requirements": "macOS 10.15 or later",
      "author": {
        "@type": "Organization",
        "name": "Menu Volume"
      }
    }
  </script>
  
  <title>{title}</title>
  
</head>
<body class="bg-white text-gray-900 antialiased">
  <slot />
</body>
</html>